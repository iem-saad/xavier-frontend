<style type="text/css">
  .card {
    backdrop-filter: blur(5px);
    min-width: 35vh;
    height: 25vh;
    box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.051),
      0px 0px 7.2px rgba(0, 0, 0, 0.073), 0px 0px 13.6px rgba(0, 0, 0, 0.09),
      0px 0px 24.3px rgba(0, 0, 0, 0.107), 0px 0px 45.5px rgba(0, 0, 0, 0.129),
      0px 0px 109px rgba(0, 0, 0, 0.18);
  }
  .card-0{
    background-color: rgba(0, 166, 255, 0.3);
  }
  .card-1 {
    background-color: rgba(255, 59, 0, 0.37);
  }
</style>
<div class="container-fluid py-4">
  <h4>Hi, <%= current_user.email %></h4>
  <h6>Please Select One of The Following Analysis Method:</h6>
</div>
<div class="row">
  <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
    <%= link_to dashbaord_tabular_analysis_path do %>
      <div class="card card-0 card-hover">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-12">
              <div class="numbers">
                <h3 class="font-weight-bolder mb-0">
                  Tabular Analysis
                </h3>
              </div>
              <p>Please Click Here to Perform Tabular Analysis!</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
    <%= link_to dashbaord_graphical_analysis_path do %>
      <div class="card card-1 card-hover">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-12">
              <div class="numbers">
                <h3 class="font-weight-bolder mb-0">
                 Graphical Analysis
                </h3>
              </div>
              <p>Please Click Here to Perform Graphical Analysis!</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
