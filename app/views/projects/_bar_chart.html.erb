<div class="col-6 p-2">
  <div class="card z-index-2">
    <div class="card-header pb-0">
      <h5><%= type.titlecase %> Comparison Of Original & Mutated Model-<%= index + 1 %>.</h5>
    </div>
    <div class="card-body p-3">
      <div class="chart">
        <canvas id="chart-bars-<%= id %>-<%= index %>" class="chart-canvas" height="400"></canvas>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

  var ctx = document.getElementById("chart-bars-<%= id %>-<%= index %>").getContext("2d");

  new Chart(ctx, {
    type: "bar",
    data: {
      labels: ["Original Model <%= index + 1 %>", "Mutated Model <%= index + 1 %>"],
      datasets: [{
        label: "Overall Accuracy",
        data: <%= [org_data, mutated_data].flatten %>,
      }, ],
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false,
        }
      },
      interaction: {
        intersect: false,
        mode: 'index',
      },
    },
  });
</script>